{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ProdiusTerm",
  "version": "0.3.0",
  "identifier": "com.prodiusterm.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:3011",
    "beforeBuildCommand": "bash scripts/prepare-bundle.sh",
    "frontendDist": "http://localhost:3011"
  },
  "app": {
    "windows": [
      {
        "title": "ProdiusTerm",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["server-bundle/**/*"],
    "category": "DeveloperTool",
    "shortDescription": "Agentic terminal workspace with auto-setup and worktree management",
    "longDescription": "ProdiusTerm is an all-in-one agentic terminal workspace that auto-opens dev server, multiple git worktrees with Claude Code, and extra tools — all in a single window with organized panes.",
    "copyright": "© 2025 ProdiusTerm",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "Entitlements.plist"
    },
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": "http://timestamp.digicert.com"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
